<odoo>
<template id="snippet_two_columns" name="Two Column Snippet">
  <section class="snippet_two_columns">
    <div class="container text-center">
      <div class="row">
        <div class="col-md-6">
          <h3>Left</h3>
          <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
        </div>
        <div class="col-md-6">
          <h3>Right</h3>
          <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
        </div>
      </div>
    </div>
  </section>
</template>
<template id="place_into_bar" inherit_id="website.snippets" name="Place into bar">
  <xpath expr="//div[@id='snippet_structure']/div[hasclass('o_panel_body')]" position="inside">
    <t t-snippet="rlm_website_custom_css.snippet_two_columns"
       t-thumbnail="/rlm_website_custom_css/static/src/img/ui/snippet_thumb.jpg"/>
  </xpath>
</template>
</odoo>
